@model FIndMeARoommate.Entities.Dormitories

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dormitories</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentsList)
        </dt>
        @{
            var selectListItems = new List<SelectListItem>();

            if (Model.StudentsList != null)
            {
                foreach (var i in Model.StudentsList)
                {
                    selectListItems.Add(new SelectListItem { Value = i.Id.ToString(), Text = i.Name }); // Assuming i.Name is the property to display
                }
            }
        }
        <dd class="col-sm-10">
            @Html.DropDownListFor(model => model.StudentsList, selectListItems)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
